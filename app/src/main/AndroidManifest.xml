<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher_simple"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_simple"
        android:supportsRtl="true"
        android:theme="@style/Theme.SohbetUygulamasi"
        tools:targetApi="31">
        
        <activity 
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.SnickersChatv4.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity 
            android:name=".MainActivityNew"
            android:exported="false"
            android:theme="@style/Theme.SnickersChatv4.NoActionBar" />

        <activity 
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.SnickersChatv4.NoActionBar" />

        <activity 
            android:name=".ChatActivity"
            android:exported="false"
            android:theme="@style/Theme.SnickersChatv4.NoActionBar" />

        <activity 
            android:name=".FriendsActivity"
            android:exported="false"
            android:theme="@style/Theme.SnickersChatv4.NoActionBar" />

        <!-- Firebase Messaging Service -->
        <service
            android:name=".services.FirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        
    </application>

</manifest>
